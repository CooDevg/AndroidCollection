<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" arent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--设置全局字体<item name="android:fontFamily">@font/din_bold</item>-->
    </style>

    <style name="FullScreenTranslucentAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 全屏透明背景 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="FullScreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 全屏透明背景 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--dialog显示动画-->
    <style name="BottomDialogStyle">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--tip对话框样式-->
    <style name="NoticeDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!--BaseDialog样式-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Dialog_back_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_2_center</item>
        <item name="android:windowExitAnimation">@anim/center_2_bottom</item>
    </style>


    <style name="CardViewNormal" parent="CardView.Light">
        <!--<item name="cardUseCompatPadding">false</item>-->
        <!--<item name="cardPreventCornerOverlap">true</item>-->
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">10px</item>
        <item name="cardBackgroundColor">#00000000</item>

    </style>

</resources>
