<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="custom_viewModel"
            type="com.coodev.androidcollection.mvvm.databind.TwoWayViewModel" />

        <variable
            name="custom_observer"
            type="com.coodev.androidcollection.mvvm.databind.TwoWayDataBinding" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--   注意,这里是 = 号     -->
        <EditText
            android:text="@={custom_viewModel.getUserName}"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:text="@={custom_observer.getUserName}"
            android:id="@+id/user_name_ob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>